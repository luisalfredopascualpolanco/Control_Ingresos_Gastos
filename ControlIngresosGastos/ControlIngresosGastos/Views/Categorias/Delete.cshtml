@model ControlIngresosGastos.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Categoria</h1>

<div>    
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.NombreCategoria)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NombreCategoria)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.tipo)
        </dt>
        <dd class="col-sm-9"> 
            @if (Model.tipo == "IN")
            {
                <p>Ingreso</p>
            }
            else
            {
                <p>Gasto</p>
            }
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-9">            
            @if (Model.Estado == true)
            {
                <p class="btn btn-outline-primary">Activado</p>
            }
            else
            {
                <p class="btn btn-outline-danger">Desactivado</p>
            }
            </dd>
    </dl>      
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Regresa a la lista</a>
    </form>
</div>
