@model ControlIngresosGastos.Models.Categoria

@{
    ViewData["Title"] = "Eliminar Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Categoria</h1>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCategoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreCategoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.tipo)
        </dt>
        <dd class="col-sm-10">
            @if (Html.DisplayFor(model => model.tipo).ToString() == "IN")
            {
                <p>Ingreso</p>
            }
            else
            {
                <p>Gasto</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)

        </dd>
    </dl>
      
    <div></div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>

    </br>

    <div>
        <a class="btn btn-light" asp-action="Index">Regresa a la lista</a>
    </div>
</div>
